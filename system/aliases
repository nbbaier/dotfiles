   open ${1:-.}
}

#==============================================================================
# Navigation
#==============================================================================

for i in {1..10}; do
   spaces=$(printf "%${i}s")
   alias "${spaces// /.}."="cd ${spaces// /../}"
done

alias -- -='cd -'
alias -- d='dirs -v'

for index in {1..9}; do
   alias "$index"="cd +${index}"
done

unset index

alias icloud="$HOME/Library/Mobile\ Documents/com~apple~CloudDocs/"
