function h() {
   local cmd=$( ([ -n "$ZSH_NAME" ] && fc -ld 1 || history) | fzf --tac | sed 's/ *[0-9]* *[0-9][0-9]:[0-9][0-9] *//')
   if [ -n "$cmd" ]; then
      print -s "$cmd"
      eval "$cmd"
   fi
}

function hcp() {
   ([ -n "$ZSH_NAME" ] && fc -ld 1 || history) | fzf --tac | sed 's/ *[0-9]* *[0-9][0-9]:[0-9][0-9] *//' | pbcopy
}

#==============================================================================
